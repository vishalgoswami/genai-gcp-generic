# GCP Configuration
GCP_PROJECT_ID=vg-pp-001
GCP_LOCATION=us-central1

# Model Configuration
MODEL_NAME=gemini-2.0-flash-exp

# Vertex AI Configuration
GOOGLE_CLOUD_PROJECT=vg-pp-001
GOOGLE_CLOUD_LOCATION=us-central1
GOOGLE_GENAI_USE_VERTEXAI=TRUE

# Safety Configuration
# Options: vertex_ai (default), model_armor, both
SAFETY_MODE=vertex_ai

# Model Armor Templates (required if using model_armor or both modes)
# Create templates at: https://console.cloud.google.com/security/command-center/model-armor
MODEL_ARMOR_PROMPT_TEMPLATE=
MODEL_ARMOR_RESPONSE_TEMPLATE=

# Safety Behavior
SAFETY_LOGGING=true        # Log safety events
SAFETY_FAIL_OPEN=true      # Continue on Model Armor API errors
