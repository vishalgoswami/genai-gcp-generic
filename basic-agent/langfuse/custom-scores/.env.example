# ============================================================================
# Custom Scores Configuration - Example
# ============================================================================
# Copy this file to .env and fill in your actual values

# ============================================================================
# Google Cloud Configuration
# ============================================================================
GCP_PROJECT_ID=your-gcp-project-id
GCP_LOCATION=us-central1

# ============================================================================
# Langfuse Configuration
# ============================================================================
# Langfuse Host (US Region)
LANGFUSE_HOST=https://us.cloud.langfuse.com

# Use GCP Secret Manager for credentials
# When true: Retrieves from Secret Manager (recommended for production)
# When false: Uses environment variables below (for development/testing)
USE_SECRET_MANAGER=false

# Langfuse API Keys (only used when USE_SECRET_MANAGER=false)
# For production, store in Secret Manager instead
# Get your keys from: https://us.cloud.langfuse.com/settings
LANGFUSE_SECRET_KEY=sk-lf-your-secret-key-here
LANGFUSE_PUBLIC_KEY=pk-lf-your-public-key-here

# ============================================================================
# Custom Scoring Configuration
# ============================================================================

# Token Count Thresholds (in tokens)
TOKEN_COUNT_LOW_THRESHOLD=100
TOKEN_COUNT_MEDIUM_THRESHOLD=500

# Latency Thresholds (in seconds)
LATENCY_EXCELLENT_THRESHOLD=1.0
LATENCY_GOOD_THRESHOLD=3.0
LATENCY_ACCEPTABLE_THRESHOLD=5.0
LATENCY_SLOW_THRESHOLD=10.0

# Default batch size for scoring
DEFAULT_LIMIT=10
DEFAULT_PAGE=1
